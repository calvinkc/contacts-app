<%= form_tag "/contacts/#{@contact.id}", method: :patch do %>
  <div>
    First name <input type="text" name="first" value="<%=@contact.first%>">
  </div>
  <div>
    Last name <input type="text" name="last" value="<%=@contact.last%>">
  </div>
  <div>
    Relationship <input type="text" name="relationship" value="<%=@contact.relationship%>">
  </div>
  <div>
    Number <input type="text" name="number" value="<%=@contact.number%>">
  </div> 
  <div>
    Email <input type="text" name="email" value="<%=@contact.email%>">
  </div> 
  <input type="submit" value="Save Changes">
<% end %>

